# If adding new groups or ideas, make sure they are unique.

# ai_will do does not actually determine weighting, but AI will not pick an idea with ai_will_do = 0
# ROOT = country picking the idea
# groups set to colonial=yes will be higher prioritized by the AI when spending power

blackswanism_reforms = {
	trigger = {
		religion = blackswanism
	}	

	can_buy_idea = {
		is_at_war = no
		NOT = { num_of_rebel_controlled_provinces = 1 }
		stability = 1
		authority = 100
		num_of_cities = 3
	}
	
	blackswanism_reform_1 = {
		manpower_recovery_speed = 0.1
	}
	blackswanism_reform_2 = {
		colonists = 1
		auto_explore_adjacent_to_colony = yes
	}
	blackswanism_reform_3 = {
		legitimacy = 0.5
		devotion = 0.5
	}
	blackswanism_reform_4 = {
		land_morale = 0.1
	}
	blackswanism_reform_5 = {
		core_creation = -0.1
	}	
	
	ai_will_do = {
		factor = 1
	}
}
